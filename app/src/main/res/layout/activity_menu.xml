<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".views.activities.MenuActivity">

    <RelativeLayout
        android:id="@+id/toolbarMenu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="Button_back"
            android:layout_marginStart="10dp"
            android:background="?actionBarItemBackground"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/toolBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/btnBack"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/menu"
            android:textColor="@color/dark_blackish_green"
            android:textAllCaps="false"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarMenu"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <!-- Layout Select Language -->
        <RelativeLayout
            android:id="@+id/layoutSelectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutLanguageTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgWorld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_world" />

                <TextView
                    android:id="@+id/tvLanguageMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgWorld"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/languages"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLanguageSelectionMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/english"
                    android:textColor="@color/green_primary"
                    android:textSize="12sp"
                    app:drawableEndCompat="@drawable/ic_drop_down"
                    app:drawableTint="@color/green_primary" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutLanguageTop"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/dummy"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/pick_the_language_for_your_app"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout Notifications  -->
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutNotificationsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/switchNotification">

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_notifications" />


                <TextView
                    android:id="@+id/tvNotificationMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgNotification"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/notifications"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutNotificationsTop"
                android:layout_toStartOf="@id/switchNotification"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dummyNotificaitonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/dummyNotificaitonImage"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/notified_of_new_statuses"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp" />


        </RelativeLayout>

        <!-- Layout Dark Mode  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutDarkModeTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/layoutDarkSwitch">

                <ImageView
                    android:id="@+id/imgDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_dark_mode" />


                <TextView
                    android:id="@+id/tvDarkModeMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgDarkMode"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/dark_mode"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutDarkModeTop"
                android:layout_toStartOf="@id/layoutDarkSwitch"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dummyDarkModeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/dummyNotificaitonImage"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/help_to_reduce_eye_strain"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/layoutDarkSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp">

                <FrameLayout
                    android:id="@+id/layoutIconSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_custom_switch">

                    <statussaver.downloadstatus.imagevideodonwload.wadirectchat.customSwtich.IconSwitch
                        android:id="@+id/icon_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_margin="0dp"
                        app:isw_active_tint_icon_left="@color/green_primary"
                        app:isw_active_tint_icon_right="@color/green_primary"
                        app:isw_background_color="@color/green_primary"
                        app:isw_icon_left="@drawable/ic_light_mode"
                        app:isw_icon_right="@drawable/ic_dark_mode"
                        app:isw_inactive_tint_icon_left="@color/white"
                        app:isw_inactive_tint_icon_right="@color/white"
                        app:isw_thumb_color_left="@color/white"
                        app:isw_thumb_color_right="@color/white" />

                </FrameLayout>
            </FrameLayout>

<!--            <com.google.android.material.materialswitch.MaterialSwitch-->
<!--                android:id="@+id/switchDarkMode"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginEnd="12dp" />-->


        </RelativeLayout>


        <!-- Layout Privacy Policy  -->
        <RelativeLayout
            android:id="@+id/layoutPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutPrivacyPolicyTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_privacy_policy" />


                <TextView
                    android:id="@+id/tvPrivacyPolicyMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgPrivacyPolicy"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutPrivacyPolicyTop"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout ShareApp  -->
        <RelativeLayout
            android:id="@+id/layoutShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutShareAppTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgShareApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/green_primary" />


                <TextView
                    android:id="@+id/tvShareAppMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgShareApp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/share_app"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutShareAppTop"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/share_app_with_yours_friend"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout Rate Us  -->
        <RelativeLayout
            android:id="@+id/layoutRateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutRateUsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgRateUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_rate_us"
                    app:tint="@color/green_primary" />


                <TextView
                    android:id="@+id/tvRateUsMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgRateUs"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/rate_us"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutRateUsTop"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/support_our_work_by_your_rating"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>