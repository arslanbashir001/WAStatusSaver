<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".views.activities.MenuActivity">

    <RelativeLayout
        android:id="@+id/toolbarMenu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="Back Button"
            android:layout_marginStart="10dp"
            android:background="?actionBarItemBackground"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/toolBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/btnBack"
            android:fontFamily="@font/roboto_bold"
            android:text="Menu"
            android:textAllCaps="false"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarMenu"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <!-- Layout Select Language -->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layoutSelectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutLanguageTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgWorld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_world" />


                <TextView
                    android:id="@+id/tvLanguageMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgWorld"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Languages"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLanguageSelectionMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="English"
                    android:textColor="@color/green_primary"
                    android:textSize="12sp"
                    app:drawableEndCompat="@drawable/ic_drop_down"
                    app:drawableTint="@color/green_primary" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutLanguageTop"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/dummy"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Pick the language for your app"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout Notifications  -->
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutNotificationsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/switchNotification">

                <ImageView
                    android:id="@+id/imgNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_notifications" />


                <TextView
                    android:id="@+id/tvNotificationMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgNotification"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Notifications"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutNotificationsTop"
                android:layout_toStartOf="@id/switchNotification"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dummyNotificaitonImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/dummyNotificaitonImage"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Notified of new statuses"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp" />


        </RelativeLayout>

        <!-- Layout Privacy Policy  -->
        <RelativeLayout
            android:id="@+id/layoutPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutPrivacyPolicyTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_privacy_policy" />


                <TextView
                    android:id="@+id/tvPrivacyPolicyMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgPrivacyPolicy"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Privacy Policy"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutPrivacyPolicyTop"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Terms and Conditions"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout ShareApp  -->
        <RelativeLayout
            android:id="@+id/layoutShareApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutShareAppTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgShareApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/green_primary" />


                <TextView
                    android:id="@+id/tvShareAppMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgShareApp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Share App"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutShareAppTop"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Share App with yours friend"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

        <!-- Layout Rate Us  -->
        <RelativeLayout
            android:id="@+id/layoutRateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_menu_item"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutRateUsTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgRateUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_rate_us"
                    app:tint="@color/green_primary" />


                <TextView
                    android:id="@+id/tvRateUsMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/imgRateUs"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Rate Us"
                    android:textColor="@color/dark_blackish_green"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutRateUsTop"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_world"
                    android:visibility="invisible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Support our work by your rating"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>